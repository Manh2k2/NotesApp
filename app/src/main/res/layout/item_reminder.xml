<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="8dp">


    <View
        android:id="@+id/view_item_reminder"
        android:layout_width="160dp"
        android:layout_height="170dp"
        android:background="@drawable/bg_note"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_item_reminder"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="centerCrop"
        android:src="@drawable/pin"
        app:layout_constraintEnd_toEndOf="@+id/view_item_reminder"
        app:layout_constraintStart_toStartOf="@+id/view_item_reminder"
        app:layout_constraintTop_toTopOf="@+id/view_item_reminder" />

    <TextView
        android:id="@+id/txt_title_item_reminder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bubblegum_sans"
        android:text="Heading"
        android:ellipsize="end"
        android:maxLines="2"
        android:maxLength="13"
        android:gravity="center"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/view_item_reminder"
        app:layout_constraintStart_toStartOf="@+id/view_item_reminder"
        app:layout_constraintTop_toBottomOf="@+id/img_item_reminder" />


    <TextView
        android:id="@+id/txt_date_time_item_reminder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date and time"
        android:textColor="@color/black"
        android:textSize="10sp"
        android:textStyle="bold"
        android:layout_margin="10dp"
        android:gravity="center"
        app:layout_constraintVertical_bias="1"
        android:fontFamily="@font/averia_gruesa_libre"
        android:includeFontPadding="false"
        app:layout_constraintBottom_toBottomOf="@+id/view_item_reminder"
        app:layout_constraintEnd_toEndOf="@+id/view_item_reminder"
        app:layout_constraintStart_toStartOf="@+id/view_item_reminder" />


</androidx.constraintlayout.widget.ConstraintLayout>