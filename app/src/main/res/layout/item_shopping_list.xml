<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/img_item_shopping"
        android:layout_width="260dp"
        android:layout_height="270dp"
        android:src="@drawable/sticky"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/averia_gruesa_libre"
        android:text="ABCABC"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/img_item_shopping"
        app:layout_constraintStart_toStartOf="@+id/img_item_shopping"
        app:layout_constraintTop_toTopOf="@+id/img_item_shopping" />

    <View
        android:id="@+id/view"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/img_item_shopping"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txt_item_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/averia_gruesa_libre"
        android:textColor="@color/white"
        android:text="abc/bac\n xyz/zxc"
        app:layout_constraintEnd_toEndOf="@+id/img_item_shopping"
        app:layout_constraintStart_toStartOf="@+id/img_item_shopping"
        app:layout_constraintTop_toBottomOf="@+id/txt_item_title" />

    <TextView
        android:id="@+id/txt_item_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:fontFamily="@font/averia_gruesa_libre"
        android:padding="7dp"
        android:text=""
        android:textColor="@color/black"
        android:textSize="10dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/img_item_shopping"
        app:layout_constraintEnd_toEndOf="@+id/img_item_shopping"
        app:layout_constraintStart_toStartOf="@+id/img_item_shopping"
        app:layout_constraintTop_toBottomOf="@+id/txt_item_text" />
</androidx.constraintlayout.widget.ConstraintLayout>